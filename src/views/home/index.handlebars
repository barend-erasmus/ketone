<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="view-header">
                    <div class="pull-right text-right" style="line-height: 14px">
                        <small>Ketone<br>Dashboard<br><span class="c-white">v.0.0.1</span></small>
                    </div>
                    <div class="header-icon">
                        <i class="pe page-header-icon pe-7s-shield"></i>
                    </div>
                    <div class="header-title">
                        <h3 class="m-b-xs">Ketone - Dashboard</h3>
                        <small>
                            Some statistics for you!
                        </small>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-lg-2 col-xs-6">
                        <div class="panel panel-filled">
                            <div class="panel-body">
                                <h2 class="m-b-none">
                                    {{numberOfLoginsStatistic.growth}}
                                    <span class="slight">
                                         {{#if numberOfLoginsStatistic.hasPositiveGrowth}}
                                        <i class="fa fa-play fa-rotate-270 text-success"></i>
                                        {{else}}
                                        <i class="fa fa-play fa-rotate-90 text-danger"></i>
                                        {{/if}}
                                        {{numberOfLoginsStatistic.growthRate}} % 
                                    </span>
                                </h2>
                                <div class="small">Logins in the last 24 hours</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2 col-xs-6">
                        <div class="panel panel-filled">
                            <div class="panel-body">
                                <h2 class="m-b-none">
                                    {{numberOfRegistersStatistic.growth}}
                                    <span class="slight">
                                         {{#if numberOfRegistersStatistic.hasPositiveGrowth}}
                                        <i class="fa fa-play fa-rotate-270 text-success"></i>
                                        {{else}}
                                        <i class="fa fa-play fa-rotate-90 text-danger"></i>
                                        {{/if}}
                                        {{numberOfRegistersStatistic.growthRate}} % 
                                    </span>
                                </h2>
                                <div class="small">Registrations in the last 24 hours</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2 col-xs-6">
                        <div class="panel panel-filled">
                            <div class="panel-body">
                                <h2 class="m-b-none">
                                    {{numberOfVerifiesStatistic.growth}}
                                    <span class="slight">
                                         {{#if numberOfVerifiesStatistic.hasPositiveGrowth}}
                                        <i class="fa fa-play fa-rotate-270 text-success"></i>
                                        {{else}}
                                        <i class="fa fa-play fa-rotate-90 text-danger"></i>
                                        {{/if}}
                                        {{numberOfVerifiesStatistic.growthRate}} % 
                                    </span>
                                </h2>
                                <div class="small">Verifications in the last 24 hours</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2 col-xs-6">
                        <div class="panel panel-filled">
                            <div class="panel-body">
                                <h2 class="m-b-none">
                                    {{numberOfResetPasswordsStatistic.growth}}
                                    <span class="slight">
                                         {{#if numberOfResetPasswordsStatistic.hasPositiveGrowth}}
                                        <i class="fa fa-play fa-rotate-270 text-success"></i>
                                        {{else}}
                                        <i class="fa fa-play fa-rotate-90 text-danger"></i>
                                        {{/if}}
                                        {{numberOfResetPasswordsStatistic.growthRate}} % 
                                    </span>
                                </h2>
                                <div class="small">Password resets in the last 24 hours</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h4>Events</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Client Id</th>
                                <th>Username</th>
                                <th>Name</th>
                                <th>IP Address</th>
                                <th>Timestamp</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each events as |value key|}}
                            <tr>
                                <td>
                                    <a href="/clients/edit?id={{value.clientId}}">{{value.clientId}}</a>
                                </td>
                                <td>{{value.username}}</td>
                                <td>{{value.name}}</td>
                                <td>{{value.ipAddress}}</td>
                                <td>{{value.timestamp}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="view-header">
                    <div class="pull-right text-right" style="line-height: 14px">
                        <small>Ketone<br>Users<br><span class="c-white">{{baseModel.version}}</span></small>
                    </div>
                    <div class="header-icon">
                        <i class="pe page-header-icon pe-7s-menu"></i>
                    </div>
                    <div class="header-title">
                        <h3><a href="/clients">Clients</a> - <a href="/clients/edit?id={{client.id}}">{{client.name}}</a> - Users</h3>
                        <small>Create and manage your users.</small>
                    </div>
                </div>
                <hr>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                {{#hasPermission user 'Create Client User'}}
                    <a href="/users/create?clientId={{@root.client.id}}" class="btn btn-w-md btn-primary pull-right">New User</a>
                {{/hasPermission}}
                <a href="/clients/edit?id={{client.id}}" class="btn btn-default pull-right" style="margin-right: 5px;">Back to Client</a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                {{#hasPermission user 'View Client User'}}
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Username</th>
                                    <th>Email Address</th>
                                    <th>Verified</th>
                                    <th>Enabled</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each @root.users as |value key|}}
                                <tr>
                                    <td>{{value.username}}</td>
                                    <td>{{value.emailAddress}}</td>
                                    <td>{{value.verified}}</td>
                                    <td>{{value.enabled}}</td>
                                    <td>
                                        <a href="/users/edit?username={{value.username}}&clientId={{@root.client.id}}" class="btn btn-w-md btn-info">Edit</a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                {{/hasPermission}}
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="view-header">
                    <div class="pull-right text-right" style="line-height: 14px">
                        <small>Ketone<br>Clients<br><span class="c-white">{{baseModel.version}}</span></small>
                    </div>
                    <div class="header-icon">
                        <i class="pe page-header-icon pe-7s-menu"></i>
                    </div>
                    <div class="header-title">
                        <h3>Clients</h3>
                        <small>Go ahead! Manage your clients.</small>
                    </div>
                </div>
                <hr>
            </div>
        </div>
        {{#hasPermission user 'Create Client'}}
            <div class="row">
                <div class="col-md-12">
                    <a href="/clients/create" class="btn btn-w-md btn-primary pull-right">New Client</a>
                </div>
            </div>
        {{/hasPermission}}
        <div class="row">
            <div class="col-md-12">
                {{#hasPermission user 'View Client'}}
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Client Id</th>
                                    <th>Allow Forgot Password</th>
                                    <th>Allow Register</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each clients as |value key|}}
                                <tr>
                                    <td>{{value.name}}</td>
                                    <td>{{value.id}}</td>
                                    <td>{{value.allowForgotPassword}}</td>
                                    <td>{{value.allowRegister}}</td>
                                    <td>
                                        {{#hasPermission @root.user 'View Client'}}
                                            <a href="/clients/edit?id={{value.id}}" class="btn btn-w-md btn-info">Edit</a>
                                        {{/hasPermission}}
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                {{/hasPermission}}
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="view-header">
                    <div class="pull-right text-right" style="line-height: 14px">
                        <small>Ketone<br>Clients - Edit<br><span class="c-white">v.0.0.1</span></small>
                    </div>
                    <div class="header-icon">
                        <i class="pe page-header-icon pe-7s-menu"></i>
                    </div>
                    <div class="header-title">
                        <h3><a href="/clients">Clients</a> - {{client.name}}</h3>
                        <small>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</small>
                    </div>
                </div>
                <hr>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <h4>Details</h4>
                <form method="post">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="Name" value="{{client.name}}">
                    </div>
                    <div class="form-group">
                        <label for="id">Id</label>
                        <input type="text" class="form-control" disabled name="id" id="id" placeholder="id" value="{{client.id}}">
                    </div>
                    <div class="form-group">
                        <label for="secret">Secret</label>
                        <input type="text" class="form-control" name="secret" disabled id="secret" placeholder="secret" value="{{client.secret}}">
                    </div>
                    <div class="form-group">
                        <h4>Allowed Scopes <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addScopeModal"> Add</button></h4>
                        <ul>
                            {{#each client.allowedScopes as |value key|}}
                            <li>{{value}} <a class="btn btn-danger btn-xs" href="/clients/removeScope?id={{@root.client.id}}&name={{value}}"><i class="fa fa-close"></a></i></li>
                            {{/each}}
                        </ul>
                    </div>
                    <div class="form-group">
                        <h4>Redirect Uris <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addRedirectUriModal"> Add</button></h4>
                        <ul>
                            {{#each client.redirectUris as |value key|}}
                            <li>{{value}} <a class="btn btn-danger btn-xs" href="/clients/removeRedirectUri?id={{@root.client.id}}&uri={{value}}"><i class="fa fa-close"></a></i></li>
                            {{/each}}
                        </ul>
                    </div>
                    <div>
                        <label>
                            {{#if client.allowForgotPassword}}
                            <input name="allowForgotPassword" type="checkbox" checked value="true" /> Allow Forgot Password
                            {{else}}
                            <input name="allowForgotPassword" type="checkbox" value="true" /> Allow Forgot Password
                            {{/if}}
                        </label>
                    </div>
                    <div>
                        <label>
                            {{#if client.allowRegister}}
                            <input name="allowRegister" type="checkbox" checked value="true" /> Allow Register
                            {{else}}
                            <input name="allowRegister" type="checkbox" value="true" /> Allow Register
                            {{/if}}
                        </label>
                    </div>
                    <input type="hidden" name="id" value="{{client.id}}" />
                    <button type="submit" class="btn btn-accent">Save</button>
                </form>
            </div>
            <div class="col-md-6">
                <h4>Actions</h4>
                <a href="/users?clientId={{client.id}}" class="btn btn-primary">Manage Users</a>
            </div>
        </div>
    </div>
</section>

<div class="modal fade" id="addScopeModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <form method="post" action="/clients/addScope" class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title">Add Scope</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Name">
                </div>
                <input type="hidden" name="id" value="{{client.id}}" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-accent">Create</button>
            </div>
        </form>
    </div>
</div>

<div class="modal fade" id="addRedirectUriModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <form method="post" action="/clients/addRedirectUri" class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title">Add Redirect Uri</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="uri">Uri</label>
                    <input type="text" class="form-control" id="uri" name="uri" placeholder="Uri">
                </div>
                <input type="hidden" name="id" value="{{client.id}}" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-accent">Create</button>
            </div>
        </form>
    </div>
</div>
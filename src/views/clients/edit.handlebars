<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="view-header">
                    <div class="pull-right text-right" style="line-height: 14px">
                        <small>Ketone<br>Clients - Edit<br><span class="c-white">v.0.0.1</span></small>
                    </div>
                    <div class="header-icon">
                        <i class="pe page-header-icon pe-7s-menu"></i>
                    </div>
                    <div class="header-title">
                        <h3><a href="/clients">Clients</a> - {{client.name}}</h3>
                        <small>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</small>
                    </div>
                </div>
                <hr>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <h4>Details</h4>
                <form>
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" id="name" placeholder="Name" value="{{client.name}}">
                    </div>
                    <div class="form-group">
                        <label for="id">Id</label>
                        <input type="text" class="form-control" disabled id="id" placeholder="id" value="{{client.id}}">
                    </div>
                    <div class="form-group">
                        <label for="secret">Secret</label>
                        <input type="text" class="form-control" disabled id="secret" placeholder="secret" value="{{client.secret}}">
                    </div>
                    <div class="form-group">
                        <h4>Allowed Scopes <button disabled type="submit" class="btn btn-primary">Add</button></h4>
                        <ul>
                            {{#each client.allowedScopes as |value key|}}
                            <li>{{value}}</li>
                            {{/each}}
                        </ul>
                    </div>
                    <div class="form-group">
                        <h4>Redirect Uris <button disabled type="submit" class="btn btn-primary">Add</button></h4>
                        <ul>
                            {{#each client.redirectUris as |value key|}}
                            <li>{{value}}</li>
                            {{/each}}
                        </ul>
                    </div>
                    <div>
                        <label>
                            {{#if client.allowForgotPassword}}
                            <input name="allowForgotPassword" type="checkbox" checked value="true" /> Allow Forgot Password
                            {{else}}
                            <input name="allowForgotPassword" type="checkbox" value="true" /> Allow Forgot Password
                            {{/if}}
                        </label>
                    </div>
                    <div>
                        <label>
                            {{#if client.allowRegister}}
                            <input name="allowRegister" type="checkbox" checked value="true" /> Allow Register
                            {{else}}
                            <input name="allowRegister" type="checkbox" value="true" /> Allow Register
                            {{/if}}
                        </label>
                    </div>
                    <button disabled type="submit" class="btn btn-default">Save</button>
                </form>
            </div>
            <div class="col-md-6">
                <h4>Actions</h4>
                <a href="/users?clientId={{client.id}}" class="btn btn-primary">Manage Users</a>
            </div>
        </div>
    </div>
</section>